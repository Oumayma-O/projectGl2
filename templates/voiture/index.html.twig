{% extends 'layout.html.twig' %}

{% block title %}Hello VoitureController!{% endblock %}

{% block body %}
<div class="row">
    {% for voiture in voitures %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ voiture.id }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{ voiture.marque }} {{ voiture.ownerName }}</h6>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="{{ path('delete_voiture',{id:voiture.id}) }}" class="card-link">delete</a>
                <a href="#" class="card-link">Another link</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
